<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Campground</h1>
        <div style="margin: 5px auto; width: 35%;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Image name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="desc" placeholder="Description">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>
            </form>
            <a href="/campgrounds" >Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>