                <a class="navbar-brand" href="/">YelpCamp</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <% if(usr == undefined){  %>

                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign Up</a></li>

                <%  } else {   %>

                <li><a href="#"><i class="fa fa-user" aria-hidden="true"></i> <%= usr.username %> </a></li>
